.search{  
  position: absolute;
  top: 40rpx;
  width:80%;
  left:50%;
  margin-left:-40%;
  background: rgba(246,248,248,.8);
  z-index: 2;
  border-radius: 10rpx;  
}  
.search_arr {  
 padding-left:20rpx; 
}
 /* 输入框样式 */
