/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/* 按钮样式 */
.info-start{
  margin-top:10rpx;
  font-size:15px;
  color:#fff;
  background-image:linear-gradient(180deg,#FF8114,#FFCD02) ;
  text-align: center;
  padding:7rpx 18rpx;
  border-radius: 50rpx;
}
/* 新价格和旧价格 */
.product-newprice{
  color:#FF6600 !important;
  font-size:16px !important;
  margin-bottom:5rpx;
}
.product-oldprice{
  font-size:12px;
  font-weight: 500;
  color:#ccc;
  text-decoration: line-through;
  margin-left:-5rpx;
}
/* 1.清空外边距 */
.m-0{
  margin:0;
}
/* 2.灰色的空白区域 */
.divider{
  height:20rpx;
  background: #f1f1f1;
  box-shadow: 0 5rpx 5rpx  rgba(0,0,0,.1) inset;  /*h v blur speard color inset*/
}
/*3. 通用箭头大于 */
.arrow{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.arrow::after{
  content:"";
  border-top:4rpx solid #ccc;
  border-right:4rpx solid #ccc;
  transform: rotate(45deg);
  width:16rpx;
  height:16rpx;
  z-index: 99;
}
/*4. 商品打分 */
.shop-start{
  position: relative;
}
.shop-start .star-before{
   color:#ff9900;
   position: absolute;
   top:0;
   left:0;
   width:75%;    /*商品打分*/
   overflow: hidden;
}
.shop-start .star-after{
   color:#e2e2e2;
}

/* 5.字体样式 */
.text-ellipse{
  overflow: hidden;   /*超出部分隐藏*/
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
}
.text-ellipse2{
  overflow: hidden;   /*超出部分隐藏*/
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
/* 6.每列分割线 */
.cell{
  background-color:#fff;
  font-size: 16px;
}
.cell-item{
  border-bottom: 1rpx solid #ddd;
  padding:20rpx 30rpx;
  display: flex;
  align-items: center;
}
/* 7 搜索框 */
/* 搜索框样式 */
.search{  
  position: absolute;
  top: 40rpx;
  width:80%;
  left:50%;
  margin-left:-40%;
  background: rgba(246,248,248,.8);
  z-index: 2;
  border-radius: 10rpx;  
}  
.search_arr {  
 padding-left:20rpx; 
}
 /* 输入框样式 */
.search_arr input{  
 margin-left: 60rpx;  
 height: 60rpx;  
 font-size: 14px;
}       
/* 搜索小图标 */
.searchcion {  
 margin: 10rpx 10rpx 10rpx 10rpx;  
 position: absolute;  
 left:25rpx;  
 z-index: 2;  
 width: 20px;  
 height: 20px;  
 text-align: center;  
}  
/* 产品价格 */
.saleprice{
  font-size:13px !important;
  color:#FF6600 !important;
}
.product-num{
  display: flex;
  white-space: normal;
  box-sizing: border-box;
  justify-content: space-between;
  width:80%;
  margin-top: 10rpx;
}
/* 加号按钮 */
.btn_add{
  font-size:12px; 
  line-height: 30rpx;
  width:30rpx;
  height:30rpx;
  text-align: center;
  color:#FF6600;
  background: #eee;
   border: 1px solid #f5f5f5; 
  border-radius: 50%;
  margin-left:25rpx;
}