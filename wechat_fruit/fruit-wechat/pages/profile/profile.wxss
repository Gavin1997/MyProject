pages{
  background: #f8f8f8;
}
.user-info-top{
  width:100%;
  height:240rpx;
  overflow: hidden;
  position: relative;
}

.bg-image{
  width:100%;
  height:240rpx;
}
.user-info-avatar{
  width:100%;
  height: 100rpx;
  position: absolute;
  left:100rpx;
  top:50%;
  margin-top:-40rpx;
  display: flex;
  align-items: center;
}
.avatar-image{
   width:80rpx;
   height:80rpx;
}
.info-name{
  color:#fff;
  font-size:14px;
  margin-left:80rpx;
}
/* 导航图标 */
.user-nav{
  display: flex;
  justify-content: space-around;
  height:200rpx;
  overflow: hidden;
}
.nav-item{
  display:flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.nav-item image{
  width:50rpx;
  height:50rpx;
}
.nav-item text{
  font-size:13px;
  color:#666;
}
.cell-item{
  padding:30rpx;
}
.cell-item image{
  width:45rpx;
  height:45rpx;
}
.cell-item text{
  font-size:12px;
  margin-left:30rpx;
}