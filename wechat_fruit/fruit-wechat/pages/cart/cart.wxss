.cart-product-warp{
    display: flex;
    justify-content: space-around;
    align-items: center;
    border:1rpx solid #ddd;
    padding:5rpx;
}
.cart-product-warp image{
    width:120rpx;
    height:120rpx;
}
.cart-product-details{
    display:flex;
    justify-content: space-around;
    flex-direction: column;
    font-size: 12px;
    color:#666;
    width:40%;
    overflow: hidden;
}
.cart-product-details text:first-child{
    color:#000;
    margin:0;
   
}
.cart-product-details text:nth-child(2){
    color:gray;
}
.cart-product-details text:nth-child(2) text{
    color:gray;
    text-decoration: line-through;
}
.cart-product-details text:last-child{
    color:#ff7223;
    font-weight: 600;
}
/* 按钮 */
.cart-num{
    display: flex;
    color:#666;
    font-size:13px;
    line-height: 50rpx;
}
.cart-num text{
    padding:10rpx;
    color:#000;
}
.cart-num .btn{
    width:50rpx;
    text-align: center;
    padding:5rpx;
    background: #f5f5f5;
}
