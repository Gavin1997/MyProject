  /* 文字公告区域 */
  .gonggao {
    width: 80%;
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    border-left: 1px solid #ccc;
    margin-top:10rpx;
  }
  .scrolltxt{
    padding:0 20rpx;
  }
  .scrolltxt image{
    width: 70rpx;
    height: 70rpx;
  }
  .marquee_box {
  
    color:#333;
    height:60rpx;
    display:inline-block;
    overflow:hidden;
  } 
  .marquee_text {
    white-space: nowrap;
    top:0;
    font-size:14px;
    line-height:60rpx;
  }

  /* 秒杀 售卖区域 */
  .zw-home-greatsale {
    padding:20rpx 20rpx;
    padding-bottom:0;
  }
  .greatsale-image{
    border:1px solid transparent;
    border-radius: 20rpx;
    overflow: hidden;
    position: relative;
  }
  .greatsale-image image{
    width:100%;
    height:260rpx;
  }
  .greatsale-text{
    font-size:12px;
    position: absolute;
    top:20rpx;
    color:#fff;
    transform: rotate(-45deg);
    left:10rpx;
    z-index: 5;
  }
  .greatsale-text-triangle{
    display: inline-block; 
    position: absolute;
    border-top:50rpx solid #F63063;
    border-left:50rpx solid #F63063;
    border-bottom:50rpx solid transparent;
    border-right:50rpx solid transparent;
    top: 0;
    left:0;
    z-index: 4;
  }
  .greatsale-text-triangle::after{
    content:"";
    width:138rpx;
    height:5rpx;
    top:0;
    left:-68rpx;
    background: #fff;
    position: absolute;
    transform: rotate(-45deg);
  }

  /* 商品展示1 */
  .zw-home-product{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    overflow: hidden;
