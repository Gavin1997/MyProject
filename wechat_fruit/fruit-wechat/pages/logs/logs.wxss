  }
  /* 商品价格 */
  .product-price{
    display: flex;
    justify-content: center;
    flex-flow: column;
    align-items: center;
  }
  
  /* 倒计时和已售 */
  .product-sale-msg{
    white-space: nowrap;
    overflow: hidden;
    margin-right:5%;
  }
  .count-down{
    background-image:linear-gradient(90deg,#F55274 0%,#F20834 30%);
    padding:4rpx 3rpx;
    font-size:12px;
    color:#fff;
    margin-top:8rpx;
  }
  .count-down text{
    font-size: 12px;
    color:#fff;
  }
  .count-down-active{
    background:#9B0020; 
    border-radius: 15rpx;
    padding:1rpx;
  }
  .product-saled{
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    margin:10rpx;
  }
  .product-saled text{
    font-size:12px;
    color:#666;
  }
  .progress{
    position: relative;
    margin:0 20rpx; 
    overflow: hidden;
    
  }
  .oldprogress{
    width:120rpx;
    height:12rpx;
    border:1px solid #FB7892;
    border-radius: 30rpx;
  }
  .newprogress{
    position: absolute;
    top: 0;
    width:12%;
    height:12rpx;
    border:1px solid #FB7892;
    border-radius: 30rpx;
    background: #FB7892;
  }
 
