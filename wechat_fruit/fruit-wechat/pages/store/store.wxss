/* 商品店面图片 */
.store-image-warp{
  width:100%;
  height: 375rpx;
  overflow: hidden;
  position: relative;
}
.store-image-warp image:first-child{
  width:100%;
}
/* 下方透明背景色 */
.trans-bg{
  background-image:linear-gradient(180deg,rgba(0,0,0,.1) 50%,rgba(0,0,0,.7) 100%); 
  z-index: 99;
  width:100%;
  height:300rpx;
  position: absolute;
  bottom: 0;
}
.image-small{
  z-index: 80;
  position: absolute;
  bottom:30rpx;
  left:50rpx;
  width: 100rpx;
  height:100rpx;
  border-radius: 50%;
  overflow: hidden;
  color:#fff;
}

.store-name{
  color:#fff;
  z-index: 99;
  position: absolute;
  left:180rpx;
  bottom:60rpx;
  font-size:15px;
  font-weight: 500;
}
/* 下方文字 品牌介绍 */
.store-intro{}
.store-intro-title {
  padding:24rpx;
  border:1rpx solid #eee;
}
.store-intro-title text{
    color: rgb(51, 51, 51);
    font-size: 15px;
    font-weight: bold;
}
.store-intro-detail{
  margin-top:20rpx;
  font-size:13px;
  color:#666;
  line-height: 20px;
  padding:18rpx 18rpx 50rpx 18rpx;
}
/* 联系方式 */
.store-contact-info{
  height:160rpx;
  padding:20rpx;
  border-bottom:1rpx solid #eee;
  line-height: 24px;
  font-size: 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.contact-detail{
  display: flex;
  flex-flow: column;
}
.store-contact-info image{
   width:24rpx;
   height:24rpx;
   float:right;
}
.stroe-pone{
    color: rgb(51, 51, 51); 
}
.stroe-time{
   color: rgb(102, 102, 102);
}
/* 门店展示 */
.store-show{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  margin:15rpx;
}
.store-show image{
  width:46%;
  height:140px;
  margin:10rpx ;
}