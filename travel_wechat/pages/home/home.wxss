
.slider,.slider image,.slider swiper{
    width:100%;
    height:390rpx;  /*图片测量*/ 
  }
  .index-nav{
    display: flex;
    flex-wrap: wrap;
  }
  .index-nav .nav-item{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width:33.333333%;
    box-sizing: border-box;
    height:200rpx;
    /* border-right: 1rpx solid #ccc; */
    border-bottom:1rpx solid #ccc;
    position: relative;      /*相对定位*/
  }
  /* 解决问题:第3,6,9个元素去掉右侧边线 */
  .index-nav .nav-item:nth-child(3n){
    border-right: 0 none;
  }
  .index-nav .nav-item image{
    width:80rpx;
    height:80rpx;
  }
   /* 解决方案二:伪类 */
   .index-nav .nav-item::after{
    content:"";
    width:1px;
    height:100%;
    position: absolute;
    right:0;
    top:0;
    background-color: #ccc;
  }
  .index-nav .nav-item:nth-child(3n)::after{
    width:0;
  } 
  .index-nav .nav-item text {
    font-size:14px; /*文字还是用px*/
    color:#666;
  }
  /* 入口样式 */
  .index-enter{
    display:flex;
    margin-top:20rpx;
  }
  .index-enter .enter-item{
    width:50%;
    justify-content: center;
    display: flex;
  }
  .index-enter .enter-item image{
    width:320rpx;
    height:178rpx;
  }