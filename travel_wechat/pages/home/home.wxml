     <swiper-item wx:for="{{banner_img_list}}" wx:key="item.cid">
       <!--图片 设置宽高 等比例缩放-->
       <image src="{{item.img}}" mode="aspectFill" lazy-load="{{true}} "width="375" height="150" />
     </swiper-item>
  </swiper>
</view>
