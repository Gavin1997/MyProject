<!-- 1.美食商品列表 -->
<view class="recomd-warp" wx:for="{{shopList}}" wx:key="{{item.id}}">
  <!-- 商品展示图片 -->
   <navigator class="recomd">
     <image class="recomd-img" src="../../assets/images/niu.png" mode="aspectFill" lazy-load="true"/>
   </navigator>
   <!-- 商品详情 -->
   <view class="recomd-info">
     <view class="recomd-title text-ellipse  ">
       <text>{{item.title}}</text>
     </view>
     <!-- 下方详细信息和星星 -->
     <view class="recomd-bottom">
       <!-- 信息 -->
      <view class="recomd-details">
        <text>电话:{{item.tel}}</text>
        <text>地址:成都市锦江区</text>
        <text>营业时间:早8点-晚8点</text>
      </view>
      <!-- 星星 -->
      <view class="shop-start">
        <view class="star-after">★★★★★</view>
        <view class="star-before" style="width:{{item.score}}">★★★★★</view>
      </view>
     </view>
   </view>
</view>
<view class="loadmore loading">正在加载</view>