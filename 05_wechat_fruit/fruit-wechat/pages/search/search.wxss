/* 产品展示 */
.zw-category-product-warp{
    display: flex;
    justify-content: space-between;
    width:100%;
    flex-wrap: wrap;
  }
  .zw-category-product{ 
     width: 50%;
     box-sizing: border-box;
     overflow: hidden;
     text-align: center;
     padding-top:20rpx;
     padding-bottom:20rpx;
     border-right:1rpx solid #eee;
     border-bottom:1rpx solid #eee;
  }
  .zw-category-product image{
    width:220rpx;
    height:240rpx;
  }
  .category-product-title{
    font-size:13px;
    color:#666;
  }
  .product-num{
    width: 90%;
    margin-left:2%;
  }